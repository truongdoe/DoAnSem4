@model DoAN_S4.Models.DataModel.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Create</h2>

    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="_id" class="control-label"></label>
                        <input asp-for="_id" class="form-control" />
                        <span asp-validation-for="_id" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label"></label>
                        <input asp-for="CategoryName" class="form-control" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    <div class="form-check">
                        <input type="radio" class="form-check-input" name="status" value="true" checked>
                        <label class="form-check-label" asp-for="Status">True</label>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-check my-2">
                        <input type="radio" class="form-check-input" name="status" value="false">
                        <label class="form-check-label" asp-for="Status">False</label>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Thêm mới" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
