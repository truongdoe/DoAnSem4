@model DoAN_S4.Models.DataModel.Size

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit Size</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="_id" class="control-label"></label>
                    <input asp-for="_id" class="form-control" />
                    <span asp-validation-for="_id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SizeName" class="control-label"></label>
                    <input asp-for="SizeName" class="form-control" />
                    <span asp-validation-for="SizeName" class="text-danger"></span>
                </div>
                <div class="form-check">
                    <input type="radio" class="form-check-input" name="status" value="true" checked>
                    <label class="form-check-label" asp-for="Status">True</label>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-check my-2">
                    <input type="radio" class="form-check-input" name="status" value="false">
                    <label class="form-check-label" asp-for="Status">False</label>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>
